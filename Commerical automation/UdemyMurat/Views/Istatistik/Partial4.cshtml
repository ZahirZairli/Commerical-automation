@model IEnumerable<UdemyMurat.Models.Sınıflar.GrupSinif3>
@{ 
    var a = 0;
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Markalara gore mehsullar</h3>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Eded</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    a++;
                    <tr>
                        <td>@a</td>
                        <td>@item.Marka</td>
                        <td>
                            @if (item.Eded >= 1 && item.Eded <=3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: @item.Eded%"></div>
                                </div>
                            }
                            else if (item.Eded >= 4 && item.Eded <= 6)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: @item.Eded%"></div>
                                </div>
                            }
                            else
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-green" style="width: @item.Eded%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (item.Eded >= 1 && item.Eded <= 3)
                            {
                                <span class="badge bg-danger">@item.Eded</span>
                            }
                            else if (item.Eded >= 4 && item.Eded <= 6)
                            {
                                <span class="badge bg-warning">@item.Eded</span>
                            }
                            else
                            {
                                <span class="badge bg-green">@item.Eded</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
