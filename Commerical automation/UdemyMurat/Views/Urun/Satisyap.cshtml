@model UdemyMurat.Models.Sınıflar.SatisHareket
@{
    ViewBag.Title = "Satisyap";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Sat</h2>
<hr />
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.UrunId)
    <input readonly value="@ViewBag.dgr2" name="UrunId" class="form-control" />
    <br />
    @Html.LabelFor(x => x.Personel.PersonelId)
    <br />
    @Html.DropDownListFor(x => x.PersonelId, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CariId)
    @Html.TextBoxFor(x => x.CariId, new { @class = "form-control",placeholder="İşçi" })
    <br />
    @Html.LabelFor(x => x.Adet)
    <input type="number" min="1" max="10" placeholder="ədəd" id="txt2" onkeyup="sum();" onchange="sum()" autocomplete="off" name="Adet" class="form-control" />
    <br />
    @Html.LabelFor(x => x.Fiyat)
    <input id="txt1" onkeyup="sum();" value="@ViewBag.dgr3 $" name="Fiyat" class="form-control" />
    <br />
    @Html.LabelFor(x => x.ToplamTutar)
    <input type="text" id="txt3" name="ToplamTutar" class="form-control" placeholder="toplam tutar" />
    <br />
    <button class="btn btn-primary">Sat</button>
</form>
<br />

<script>
    function sum() {
        var sayi1 = document.getElementById('txt1').value;
        var sayi2 = document.getElementById('txt2').value;
        var netice = parseInt(sayi1) * parseInt(sayi2);
        if (!isNaN(netice)) {
            document.getElementById('txt3').value = netice;
        }
    }
</script>

