@model UdemyMurat.Models.Sınıflar.Xeberler
@{
    ViewBag.Title = "Xeber";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Yeni Xeber</h2>
<hr />
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Paylaşan)
    @Html.TextBoxFor(x => x.Paylaşan, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Basliq)
    @Html.TextBoxFor(x => x.Basliq, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>

