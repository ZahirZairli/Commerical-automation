@using UdemyMurat.Models.Sınıflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departmanlar</h2>
<hr />
<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>Kargo Takip nomresi : @Html.TextBox("p")</p>
    <input type="submit" value="Axtar" />
}
<br />
<table id="tbl1" class="table table-bordered table-hover" style="margin-top: 20px;cursor: pointer;">
    <thead>
        <tr>
            <th>Id</th>
            <th>Personel</th>
            <th>Alici</th>
            <th>Tarix</th>
            <th>Takip Kodu</th>
            <th>Detaylar</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@(Model.IndexOf(item)+1)</td>
            <td>@item.Personel</td>
            <td>@item.Alici</td>
            <td>@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")</td>
            <td>@item.TakipKodu</td>
            <td><a href="~/Kargo/KargoTakip/@item.TakipKodu" style="background-color: lightcoral;color: white;" class="btn btn-success">Detaylar</a></td>
        </tr>
        }
    </tbody>
</table>
<a href="~/Kargo/KargoEkle" class="btn btn-info">Yeni kargo girişi</a>

