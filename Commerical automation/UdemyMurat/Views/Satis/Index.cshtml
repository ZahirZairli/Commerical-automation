@using UdemyMurat.Models.Sınıflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Satış hərəkətləri</h2>
<hr />
<br />
<table id="tbl1" class="table table-bordered table-hover" style="margin-top: 20px;cursor: pointer;">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@(Model.IndexOf(x)+1)</td>
                <td>@x.Urun.UrunAd</td>
                <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
                <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>
                <td>@x.Adet</td>
                <td>@x.Urun.SatisFiyat</td>
                <td>@x.ToplamTutar</td>
                <td>@Convert.ToDateTime(x.Tarih).ToString("dd/MM/yyyy")</td>
                <td><a href="~/Satis/SatisGetir/@x.SatisId" class="btn btn-success">Güncelle</a></td>
                <td><a href="~/Satis/SatisDetay/@x.SatisId" style="background-color: lightcoral;color: white;" class="btn btn-success">Detay</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="~/Satis/YeniSatis" class="btn btn-info">Yeni Satış Yap</a>



