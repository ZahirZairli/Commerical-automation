@model UdemyMurat.Models.Sınıflar.SatisHareket
@{
    ViewBag.Title = "SatisGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Satış Güncəlləmə</h2>
<hr />
<br />
@using (Html.BeginForm("SatisGetir", "Satis", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x=>x.SatisId)
    @Html.LabelFor(x => x.Urun)
    @Html.DropDownListFor(x => x.UrunId, (List<SelectListItem>)ViewBag.dgr1, new
    {
        @class =
    "form-control"
    })
    <br />
    @Html.Label("Cari")
    @Html.DropDownListFor(x => x.CariId, (List<SelectListItem>)ViewBag.dgr2, new
    {
        @class =
    "form-control"
    })
    <br />
    @Html.LabelFor(x => x.Personel)
    @Html.DropDownListFor(x => x.PersonelId, (List<SelectListItem>)ViewBag.dgr3, new
    {
        @class =
    "form-control"
    })
    <br />
    @Html.LabelFor(x => x.Adet)
    @Html.TextBoxFor(x => x.Adet, new { @class = "form-control" })
    <br />
</div>
    <br />
    <button class="btn btn-warning">Güncelle</button>
}


