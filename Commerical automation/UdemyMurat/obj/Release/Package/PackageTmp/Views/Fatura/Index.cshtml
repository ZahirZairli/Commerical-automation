<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    $('tbody').on('click', '.pop', function () {
        var a = $(this).parents('tr').attr('trid');
        console.log(a);
        $('#inp').val(a);
        $.get('../../Fatura/Index')
    })
</script>


