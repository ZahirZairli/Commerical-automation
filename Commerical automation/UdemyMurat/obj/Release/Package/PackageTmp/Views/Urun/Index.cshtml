
@using UdemyMurat.Models.Sınıflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Ürünler</h2>
<hr />
<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
            {
                <p>Urun Adi : @Html.TextBox("p")</p>
                <input type="submit" value="Axtar" />
            }
<br />
<div style="width: 97%;">
    <table id="tbl1" class="table table-bordered table-hover" style="margin-top: 20px;cursor: pointer;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ürün</th>
                <th>Marka</th>
                <th>Stok</th>
                <th>Alış fiyatı</th>
                <th>Satış fiyatı</th>
                <th>Kategori</th>
                <th>Görsel</th>
                <th>Sil</th>
                <th>Güncelle</th>
                <th>Sat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@(Model.IndexOf(item) + 1)</td>
                <td>@item.UrunAd</td>
                <td>@item.Marka</td>
                <td>@item.Stok</td>
                <td>@item.AlisFiyat</td>
                <td>@item.SatisFiyat</td>
                <td>@item.Kategori.KategoriAd</td>
                <td>
                    <img style="width: 100px;height: 50px;" src="~/thumber/images/@item.UrunGorsel" />
                </td>
                <td><a href="~/Urun/UrunSil/@item.UrunId" class="btn btn-danger">Sil</a></td>
                <td><a href="~/Urun/UrunGetir/@item.UrunId" class="btn btn-success">Güncelle</a></td>
                <td><a href="~/Urun/Satisyap/@item.UrunId/?(@item.UrunAd)" class="btn btn-warning">Sat</a></td>
            </tr>
                }
        </tbody>
    </table>
</div>
<br />
<a href="~/Urun/YeniUrun" class="btn btn-primary">Yeni ürün</a>
