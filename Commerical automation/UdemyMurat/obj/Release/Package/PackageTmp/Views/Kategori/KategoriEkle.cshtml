@model UdemyMurat.Models.Sınıflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Yeni Kategori Sayfası</h2>
<hr />
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.KategoriAd)
    @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.KategoriAd, "", new { @style = "color:red;" })
    <br />
    <button class="btn btn-info" id="Btn1">Kaydet</button>
</form>
@TempData["Message2"]
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>
    $('#Btn1').click(function () {
        if (@TempData["Msj1"] !=null) {
        alert("Kategorya əlavə edildi");
        }
    })
</script>
