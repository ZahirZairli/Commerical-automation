@model UdemyMurat.Models.Sınıflar.Class3
@{
    ViewBag.Title = "Deneme";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(function () {
        $('#DrpKategori').change(function () {
            var id = $('#DrpKategori').val();
            $.ajax({
                url: '/Kategori/UrunGetir',
                data: { p: id },
                type: "POST",
                dataType: "Json",
                success: function (data) {
                    console.log(data);
                    $('#DrpUrun').empty();
                    for (var i = 0; i < data.length; i++) {
                        $('#DrpUrun').append("<option value='" + data[i].Value + "'>" + data[i].Text + "</Option>");
                    }
                }
            });
        });
    });
</script>
<br />
<div>
    <h2>Kategoriler ve Mehsullar</h2>
</div>
<br />
<div>
    @Html.Label("Kategoriyalar")
    @Html.DropDownList("DrpKategori", Model.Kategoriler, "---Kategoryani secin---", new { @class = "form-control" })
    <br />
    @Html.Label("Məhsullar")
    @Html.DropDownList("DrpUrun", Model.Urunler, "---Mehsulu secin---", new { @class = "form-control" })
    <br />
</div>