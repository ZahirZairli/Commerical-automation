@using UdemyMurat.Models.Sınıflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | User Profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">

                        <h1>Profilim</h1>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3">
                        <div class="card card-primary card-outline">
                            <div class="card-body box-profile">
                                <div class="text-center">
                                    <img class="profile-user-img img-fluid img-circle"
                                         src="https://img.icons8.com/bubbles/2x/user.png"
                                         alt="User profile picture">
                                </div>
                                @foreach (var item in Model)
                                {
                                    <h3 class="profile-username text-center">@item.CariAd @item.CariSoyad</h3>
                                    <p class="text-muted text-center">@item.CariMail</p>
                                }
                                <p class="text-muted text-center">İstifadəçi İd - @ViewBag.cid</p>
                                <ul class="list-group list-group-unbordered mb-3">
                                    <li class="list-group-item">
                                        <b>Toplam satış</b> <a class="float-right">@ViewBag.tms</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Toplam xərc</b> <a class="float-right">@ViewBag.tmstp$</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Toplam alınan məhsul</b> <a class="float-right">@ViewBag.tmssay</a>
                                    </li>
                                </ul>
                                <a href="~/CariPanel/KargoTakip" class="btn btn-primary btn-block"><b>Kargolar</b></a>
                            </div>
                        </div>
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Haqqımda</h3>
                            </div>
                            @foreach (var item in Model)
                            {
                                <div class="card-body">
                                    <strong><i class="fas fa-book mr-1"></i> Peşə</strong>
                                    <p class="text-muted">
                                        Web Developer.
                                    </p>
                                    <hr>
                                    <strong><i class="fas fa-map-marker-alt mr-1"></i> Şəhər</strong>
                                    <p class="text-muted">@item.CariSehir</p>
                                    <hr>
                                    <strong><i class="fas fa-pencil-alt mr-1"></i> Telefon</strong>
                                    <p class="text-muted">
                                        (+994)-51-355-10-06
                                    </p>
                                    <hr>
                                    <strong><i class="far fa-file-alt mr-1"></i> Bioqrafiya</strong>
                                    <p class="text-muted">Cavanlığımla fəxr edir və peşmançılıq hissi keçirtmirəm.Çünki o məni mən etdi.</p>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="card">
                            <div class="card-header p-2">
                                <ul class="nav nav-pills">
                                    <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Mesajlar</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Xəbərlər</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Ayarlar</a></li>
                                </ul>
                            </div><!-- /.card-header -->
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="active tab-pane" id="activity">
                                        @foreach (var item in ViewBag.mesaj)
                                        {
                                            <div class="post">
                                                <div class="user-block">
                                                    <img class="img-circle img-bordered-sm" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcScWULLhwIuFcwtlCP675C_ZZtkv5I6BDE2kiAD4YDOuAjvZvlxMrA92jaip0E-vtjnp5M&usqp=CAU" alt="user image">
                                                    <span class="username">
                                                        <a href="#">@item.Gonderici</a>
                                                        <a href="~/CariPanel/Sil/@item.MesajId" class="float-right btn-tool"><i class="fas fa-times"></i></a>
                                                    </span>
                                                    <span class="description">@item.Konu- @Convert.ToDateTime(item.Tarix).ToString("dd/MM/yyyy")</span>
                                                </div>
                                                <p>
                                                    @item.Icerik
                                                </p>
                                            </div>
                                        }
                                    </div>
                                    <div class="tab-pane" id="timeline">
                                        @Html.Action("Xeberler", "CariPanel")
                                    </div>
                                    @Html.Action("Setting", "CariPanel")
                                </div>
                            </div><!-- /.card-body -->
                        </div>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
    </div>
    <aside class="control-sidebar control-sidebar-dark">
    </aside>
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <!-- jQuery -->
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
</body>
</html>




