<a href="~/CariPanel/YeniMesaj" class="btn btn-primary btn-block mb-3">Yeni mesaj yarat</a>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Seçimlər</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <ul class="nav nav-pills flex-column">
            <li class="nav-item active">
                <a href="~/CariPanel/GelenMesajlar" class="nav-link">
                    <i class="fas fa-inbox"></i> Gelen qutusu
                    <span class="badge bg-primary float-right">@ViewBag.gelen</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="~/CariPanel/GonderilenMesajlar" class="nav-link">
                    <i class="far fa-envelope"></i> Gönderdiyim mesajlar
                    <span class="badge bg-danger float-right">@ViewBag.gonderilen</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="~/CariPanel/ZibilQutusu" class="nav-link">
                    <i class="far fa-trash-alt"></i> Zibil qutusu
                    <span class="badge bg-olive float-right">@ViewBag.zibil</span>
                </a>
            </li>
        </ul>
    </div>
</div>
