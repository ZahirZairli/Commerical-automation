    @using UdemyMurat.Models.Sınıflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departmanlar</h2>
<hr />
<br />
<table id="tbl1" class="table table-bordered table-hover" style="margin-top: 20px;cursor: pointer;">
    <thead>
        <tr>
            <th>Id</th>
            <th>Departman Ad</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(Model.IndexOf(item)+1)</td>
                <td>@item.DepartmanAd</td>
                <td><a href="~/Departman/DepartmanSil/@item.DepartmanId" class="btn btn-danger">Sil</a></td>
                <td><a href="~/Departman/DepartmanGetir/@item.DepartmanId" class="btn btn-success">Güncelle</a></td>
                <td><a href="~/Departman/DepartmanDetay/@item.DepartmanId" style="background-color: lightcoral;color: white;" class="btn btn-success">Detaylar</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="~/Departman/DepartmanEkle" class="btn btn-info">Yeni departman</a>

